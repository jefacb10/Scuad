
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        .logout{
            position: absolute;
            right:40px;
            top: 6px;
            font-size: 16px;
        }
        .navbar-brand{
            pointer-events: none;
            cursor: default;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">
                    <img src="http://www.scuad.com.br/Content/assets/imgs/logo.png" width="100" height="20" class="d-inline-block align-top" alt="">
                </span>
            </div>
            
            <div class="logout">
                @Html.ActionLink("Sair", "Index", "LoginUser", new { area = "" }, new { @class = "logout" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer style="position:absolute;bottom:10px; margin-left: 35%">
            <p>&copy; @DateTime.Now.Year - Jeferson Araújo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
