@model Scuad.ViewModel.ChargeViewModel

    <table class="table" width="100px">
        <thead class="thead-dark">
            <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">@Html.DisplayName("Nome")</th>
                <th scope="col">@Html.DisplayName("Ativo")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cargo in Model.ChargesList)
            {
                using (Html.BeginForm("UpdateActive", "Charge", new { cargo.IdCharge }))
                {
                    if (cargo.IsActive == "Não")
                    {
                        <tr style="background-color: #E0E0E0">
                            <th>@Html.DisplayFor(model => cargo.IdCharge)</th>
                            <td>@Html.DisplayFor(model => cargo.Name)</td>
                            <td>@Html.TextBoxFor(model => cargo.IsActive, new { type = "submit" })</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <th>@Html.DisplayFor(model => cargo.IdCharge)</th>
                            <td>@Html.DisplayFor(model => cargo.Name)</td>
                            <td>@Html.TextBoxFor(model => cargo.IsActive, new {  @class = "btn-primary",type = "submit" })</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
